<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2F30"
    tools:context=".View.Rules">

    <TextView
        android:id="@+id/textView"
        android:layout_width="341dp"
        android:layout_height="56dp"
        android:text="@string/codenames_rules"
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/textViewRules"
        android:layout_width="371dp"
        android:layout_height="571dp"
        android:layout_marginTop="8dp"
        android:editable="false"
        android:fadeScrollbars="false"
        android:fontFamily="sans-serif-medium"
        android:keepScreenOn="true"
        android:scrollbars="vertical"
        android:text="@string/textview_Rules"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="Deprecated" />

    <Button
        android:id="@+id/btnBackFromRule"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/button_default"
        android:text="@string/btn_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRules" />
</androidx.constraintlayout.widget.ConstraintLayout>