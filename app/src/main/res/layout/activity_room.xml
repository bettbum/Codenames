<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Room"
    android:background="@color/black">

    <TextView
        android:id="@+id/lblRoomNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room number : 3289"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp" />
    <Button
        android:id="@+id/btnObjectiveBlue"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/button_blue"
        android:text="Objective"
        app:layout_constraintTop_toBottomOf="@id/lblRoomNumber"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        />
    <Button
        android:id="@+id/btnSpymasterBlue"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/button_blue"
        android:text="spymaster"
        app:layout_constraintTop_toBottomOf="@id/btnObjectiveBlue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/btnObjectiveRed"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/button_red"
        android:text="Objective"
        app:layout_constraintTop_toBottomOf="@id/btnSpymasterBlue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/btnSpymasterRed"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/button_red"
        android:text="spypaster"
        app:layout_constraintTop_toBottomOf="@id/btnObjectiveRed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/lblNumberOfPlayersJoined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of players joined : 3"
        app:layout_constraintTop_toBottomOf="@id/btnSpymasterRed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/lblNumberOfObjectiveMissed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Missing 1 objectives"
        app:layout_constraintTop_toBottomOf="@id/lblNumberOfPlayersJoined"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/red_error"/>
    <TextView
        android:id="@+id/lblNumberOfSpymastersMissed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Missing 1 spymasters"
        app:layout_constraintTop_toBottomOf="@id/lblNumberOfObjectiveMissed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/red_error"/>
    <Button
        android:id="@+id/btnBack"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/button_default"
        android:text="BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="50dp"
        />
    <Button
        android:id="@+id/btnPlay"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/button_green"
        android:text="ready"
        app:layout_constraintBottom_toTopOf="@id/btnBack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>