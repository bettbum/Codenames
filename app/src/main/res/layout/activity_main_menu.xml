<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainMenu"
    android:background="@color/black">


    <TextView
        android:id="@+id/lbTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/btnCreateRoom"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/button_default"
        android:text="@string/create_room"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/lbTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/btnJoinRoom"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/button_default"
        android:textSize="20dp"
        android:text="@string/join_room"
        app:layout_constraintTop_toBottomOf="@id/btnCreateRoom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/btnRule"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/button_default"
        android:textSize="20dp"
        android:text="@string/rule"
        app:layout_constraintTop_toBottomOf="@id/btnJoinRoom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp" />


</androidx.constraintlayout.widget.ConstraintLayout>