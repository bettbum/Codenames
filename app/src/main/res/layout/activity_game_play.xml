<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".View.GamePlay">

    <TextView
        android:id="@+id/lblRoomNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/room_number_gamePlay"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblTurn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_default"
        android:gravity="center"
        android:text="@string/player_turn"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblRoomNumber" />

    <TableLayout
        android:id="@+id/tbBoardGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/lblTurn">

        <TableRow
            android:gravity="center"
            android:padding="0dp">

            <Button
                android:id="@+id/btn00"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn01"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn02"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn03"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn04"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:padding="0dp">

            <Button
                android:id="@+id/btn10"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn11"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn12"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn13"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn14"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:padding="0dp">

            <Button
                android:id="@+id/btn20"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn21"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn22"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn23"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn24"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:padding="0dp">

            <Button
                android:id="@+id/btn30"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn31"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn32"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn33"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn34"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:padding="0dp">

            <Button
                android:id="@+id/btn40"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn41"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn42"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn43"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn44"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:textSize="10dp" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:padding="6dp"
            android:layout_height="120dp">

            <TextView
                android:id="@+id/lblGuessWord"
                android:layout_height="50dp"
                android:layout_span="3"
                android:background="@drawable/button_default"
                android:gravity="center"
                android:text="Guessword"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblClueNumber"
                android:layout_height="50dp"
                android:layout_span="2"
                android:background="@drawable/button_default"
                android:gravity="center"
                android:text="3"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnObjBlue"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_default"
        android:text="Objective"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbBoardGame" />

    <Button
        android:id="@+id/btnSpyBlue"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_default"
        android:text="spymaster"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnObjBlue" />

    <Button
        android:id="@+id/btnObjRed"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_default"
        android:text="Objective"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbBoardGame" />

    <Button
        android:id="@+id/btnSpyRed"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_default"
        android:text="SPYMASTER"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnObjRed" />

    <TextView
        android:id="@+id/lblDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text=":"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSpyRed" />

    <TextView
        android:id="@+id/lblBluePoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="3"
        android:textColor="@color/blue_button"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/lblDivider"
        app:layout_constraintRight_toLeftOf="@id/lblDivider" />

    <TextView
        android:id="@+id/lblRedPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="3"
        android:textColor="@color/red_button"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/lblDivider"
        app:layout_constraintLeft_toRightOf="@id/lblDivider" />


</androidx.constraintlayout.widget.ConstraintLayout>